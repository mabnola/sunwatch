<div class="jumbotron">
  <div class="container">
	<div class="row">
	  <div class="col-sm-12">
		<h1>Sunwatch</h1>
		<p>an application for finding out the weather</p>
	  </div>
	</div>
  </div>
</div>
<div class="container">
  <div class="row">
	<div class="col-sm-12">
	  <!-- This is THE STUFF -->
		<%= form_tag weather_display_url do %>
		    <div class="row">
			<div class="col-sm-8">
			    <%= label_tag "city", "City", class: "control-label" %>
			    <%= text_field_tag :city, nil, placeholder: "Enter a City", class: "form-control" %>
			</div>
			<div class="col-sm-4">
			    <%= label_tag "state", "State", class: "control-label" %>
			    <%= text_field_tag :state, nil, placeholder: "Enter a State, e.g.: LA", class: "form-control" %>
			</div>
		    </div>
		    <hr/>
		    <%= submit_tag "Submit!", class: "btn btn-primary" %>
		<% end %>
	</div>
  </div>
</div>